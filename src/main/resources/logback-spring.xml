<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    
    <!-- Console appender with traceId in pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{40} [traceId=%X{traceId:-NO_TRACE}] - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Application loggers -->
    <logger name="com.sporty.eventstream" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Spring loggers (reduce noise) -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.scheduling" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    
    <!-- Kafka loggers (reduce noise) -->
    <logger name="org.apache.kafka" level="WARN"/>
    
    <!-- SQL logging (optional - can be disabled for less noise) -->
    <logger name="org.hibernate.SQL" level="INFO"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
    
</configuration>

